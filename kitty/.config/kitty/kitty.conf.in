# black
color0 %cl0%
color8 %cl8%

# red
color1 %cl1%
color9 %cl9%

# green
color2 %cl2%
color10 %cl10%

# yellow
color3 %cl3%
color11 %cl11%

# blue
color4 %cl4%
color12 %cl12%

# magenta
color5 %cl5%
color13 %cl13%

# cyan
color6 %cl6%
color14 %cl14%

# white
color7 %cl7%
color15 %cl15%

# fore-, background- and cursorcolor
foreground %clfg%
background %clbg%
background_opacity  1.0
cursor #e16a98
selection_foreground #111111
selection_background #cccccc

# adding padding
window_padding_width 10

# font config
font_size 12.0
font_family FiraMono Nerd Font
bold_font auto
italic_font auto
bold_italic_font auto

disable_ligatures cursor

# set cursor to not blinking
cursor_blink_interval 0

# set scrollback
scrollback_lines 2000

# clipboard
strip_trailing_spaces smart

# no bell sound
enable_audio_bell no

# Window layout
remember_window_size  yes
initial_window_width  640
initial_window_height 400

# mappings
map ctrl+equal change_font_size all +1.0
map ctrl+minus change_font_size all -1.0
